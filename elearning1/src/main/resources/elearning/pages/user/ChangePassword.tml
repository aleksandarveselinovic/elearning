<html t:type="Layout" t:title='message:change-password' xmlns:t='http://tapestry.apache.org/schema/tapestry_5_3.xsd'>
    <div class='row-fluid'>
        <div class='span3'></div>
        <div class='span5'>
            <form class='form-horizontal' t:type='Form' t:id='changePasswordForm'>
                <t:errors/>
                <t:alerts/>
                <fieldset>
                    <legend>${message:change-password}</legend>
                    <div class='control-group'>
                        <label class='control-label' t:type='Label' t:for='newPassword'/>

                        <div class='controls'>
                            <input t:type='PasswordField' t:id='newPassword' t:value='password'/>
                        </div>
                    </div>

                    <div class='control-group'>
                        <label class='control-label' t:type='Label' t:for='confirmPassword'/>

                        <div class='controls'>
                            <input t:type='PasswordField' t:id='confirmPassword' t:value='confirmPassword'/>
                        </div>
                    </div>

                    <div class='form-actions'>
                        <button type='submit' class='btn btn-primary'>${message:save}</button>
                    </div>
                </fieldset>


            </form>

        </div>
        <div class='span4'></div>
    </div>
</html>